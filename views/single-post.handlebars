<article class="post">
    <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>{{post.post_url}}</span>
    </div>
    <div class="meta">
        {{post.vote_count}} point(s) by {{post.usr.username}} on {{post.created_at}} |
        <a href="/post/{{post.comments.length}} comment(s)"></a>
    </div>
</article>